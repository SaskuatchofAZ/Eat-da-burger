<h1 class="title">Eat-da-Burger!</h1>
<div class="notEaten">
  <h2>Burgers that have not been eaten!</h2>

  <ul>
    {{#each burgers}}
    {{#unless eaten}}
    {{> burgers/burger-block eaten=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="Eaten">
  <h2>Burgers that have been eaten!</h2>

  <ul>
    {{#each burgers}}
    {{#if eaten}}
    {{> burgers/burger-block eaten=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>


<h2 class="footer">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>